<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mc.mapper.MenuMapper">

    <resultMap id="menuMap" type="Menu">
        <id column="mid" property="mid"></id>
        <result column="parentid" property="parentid"></result>
        <result column="name" property="name"></result>
        <result column="price" property="price"></result>
        <result column="picurl" property="picurl"></result>
        <result column="desc" property="desc"></result>
        <association property="type" select="com.mc.mapper.TypeMapper.findById" column="typeid"></association>
    </resultMap>

    <select id="findAll" resultMap="menuMap" parameterType="int">
        SELECT * FROM M_MENU
        WHERE parentid is null or parentid = '-1'
        LIMIT #{pageNum}, #{pageSize}
    </select>

    <select id="count" resultType="int">
        SELECT COUNT(MID) FROM M_MENU
    </select>

    <select id="findMenuById" parameterType="long" resultMap="menuMap">
        SELECT * FROM M_MENU WHERE MID = #{mid}
    </select>

    <insert id="save" parameterType="Menu">
        INSERT INTO M_MENU(`NAME`, PRICE, `DESC`, TYPEID) VALUES (#{name}, #{price}, #{desc}, #{type.typeid})
    </insert>

    <update id="update" parameterType="Menu">
        UPDATE M_MENU SET `NAME` = #{name}, PRICE = #{price}, TYPEID = #{typeid}
        <if test="desc != null">
            , `DESC` = #{desc}
        </if>
        WHERE MID = #{mid}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM M_MENU WHERE MID = #{mid}
    </delete>
</mapper>

